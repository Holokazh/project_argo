{% extends 'base.html.twig' %}

{% block title %}
  Argo
{% endblock %}

{% block body %}
  <!-- Header section -->
  <header>
    <h1>
      <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png" alt="Wild Code School logo" />
      Les Argonautes
        
    </h1>
  </header>

  <!-- Main section -->
  <main>

    <!-- New member form -->
    <h2>
      Ajouter un(e) Argonaute
    </h2>
    <div class="new-member-form">

      <div id="form">
        {{ form_start(form_argonaute) }}
        <div id="form-group">
          {{ form_row(form_argonaute.nom) }}
        </div>
        {{ form_end(form_argonaute) }}
      </div>

    </div>

    <!-- addFlash for adding argonaute -->
    {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
    {% endfor %}

    <!-- addFlash for error -->
    {% for message in app.flashes('danger') %}
      <div class="alert alert-danger">
        {{ message }}
      </div>
    {% endfor %}

    <!-- Member list -->
    <h2>
    Membres de l'équipage | <span id="numberOfArgonautes">{{ numberOfArgonautes }} / 50</span>
    </h2>
    <section class="member-list">
      {% for argonaute in argonautes %}
        <div class="member-item">
          {{ argonaute.nom|capitalize }}
        </div>
      {% endfor %}
    </section>

  </main>

  <footer>
    <p>
      Réalisé par Jason en Anthestérion de l'an 515 avant JC
    </p>
  </footer>
{% endblock %}
